<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ==============================
         RES.PARTNER HMS EXTENSIONS
         ============================== -->

    <!-- Extend partner form view to include HMS patient linking -->
    <record id="view_partner_form_hms_extension" model="ir.ui.view">
        <field name="name">res.partner.form.hms.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Add patient linking field to sales/purchases miscellaneous section -->
            <xpath expr="//page[@name='sales_purchases']//group[@name='misc']" position="inside">
                <field name="related_patient_id" 
                       options="{'no_create': True, 'no_create_edit': True}"
                       context="{'default_state': 'good'}"
                       help="Link this customer to a patient from HMS system"/>
            </xpath>
        </field>
    </record>

    <!-- Extend partner tree view to include HMS patient information -->
    <record id="view_partner_tree_hms_extension" model="ir.ui.view">
        <field name="name">res.partner.tree.hms.extension</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_tree"/>
        <field name="arch" type="xml">
            <!-- Add website field after email (visible by default) -->
            <xpath expr="//field[@name='email']" position="after">
                <field name="website" optional="show"/>
            </xpath>
            
            <!-- Add patient link field after website (hidden by default) -->
            <xpath expr="//field[@name='website']" position="after">
                <field name="related_patient_id" optional="hide"/>
            </xpath>
        </field>
    </record>

</odoo>